<div class="container">
  <div class="row">
    <div class="form col-md-6 col-md-offset-3">
        <%= form_for @user do |f| %>
          <h3>Register Your Phone Number</h3>

            <div class="form-group">
              <%= f.label :phone %> <i>(we need your current phone number to send your text reminders)</i>
              <%= f.text_field :phone, class: "form-control" %>
            </div>  
          <h3>Set Your Reminder frequency</h3>
          <div class="col-md-6">
            <h3>Email</h3>
              <div class="form-group">
                <%= f.radio_button(:email_frequency, 1) %>
                <%= f.label(:email_frequency, "Weekly") %>
              </div>     

              <div class="form-group">
                <%= f.radio_button(:email_frequency, 0) %>
                <%= f.label(:email_frequency, "Daily") %>
              </div>  
          </div>
          <div class="col-md-6">
            <h3>Text</h3>
              <div class="form-group">
                <%= f.radio_button(:sms_frequency, 1) %>
                <%= f.label(:sms_frequency, "Weekly") %>
              </div>     
                    
              <div class="form-group">
                <%= f.radio_button(:sms_frequency, 0) %>
                <%= f.label(:sms_frequency, "Daily") %>
              </div> 
          </div>   

          <%= f.submit "Update", class: "btn btn-default" %>
        <% end %>
    </div> 
  </div>     
</div>    