<div>
  <%= form_for @motivation, html: { multipart: true } do |f| %>

    <p class="form-group"> 
      <%= f.label :title, "Upload an Image" %>
		  <%= f.file_field :image, required: true, class: "form-control", id:"pictureInput" %>
  	</p>
    <div class="form-group" id="target"></div>
    <p class="form-group"> 
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control" %>
    </p>

    <p class="form-group"> 
      <%= f.label :body %><br>
      <%= f.text_area :body, rows: 10, col: 50, class: "form-control" %>
    </p>

    <p><%= f.submit "Submit", class: "btn btn-default" %></p>
  <% end %>
</div>